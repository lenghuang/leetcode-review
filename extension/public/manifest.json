{
  "manifest_version": 3,
  "name": "Recode.ai Sync",
  "version": "1.0",
  "description": "Syncs your Leetcode submissions with Recode.ai servers",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://leetcode.com/*",
    "*://leetcode-review.vercel.app/*",
    "http://localhost/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://leetcode-review.vercel.app/*", "http://localhost/*"],
      "js": ["contentScriptSync.js"]
    },
    {
      "matches": ["*://*.leetcode.com/*", "*://leetcode.com/*"],
      "js": ["contentScriptLeetcode.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-48x48.png",
      "48": "icons/icon-48x48.png",
      "128": "icons/icon-128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon-48x48.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
